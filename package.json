{
  "name": "cypress-automation-project",
  "version": "1.0.0",
  "description": "Cypress automation framework with POM",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:headed": "cypress run --headed",
    "test:dev": "cypress run --env environment=dev",
    "test:staging": "cypress run --env environment=staging",
    "lint": "eslint cypress/**/*.ts",
    "lint:fix": "eslint cypress/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^20.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cypress": "^13.6.0",
    "cypress-mochawesome-reporter": "^4.0.2",
    "esbuild": "^0.19.0",
    "eslint": "^8.0.0",
    "eslint-plugin-cypress": "^2.15.0",
    "mochawesome": "^7.1.4",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.3.0",
    "typescript": "^5.9.3"
  }
}
